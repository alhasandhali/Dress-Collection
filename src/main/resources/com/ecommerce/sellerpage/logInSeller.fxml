<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ecommerce.sellerpage.controller.LogInSellerController">
   <children>
      <Label layoutX="279.0" layoutY="27.0" text="E-Commerce" textFill="#065ab4">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <Label layoutX="121.0" layoutY="185.0" text="Seller Account Log In">
         <font>
            <Font name="System Bold Italic" size="18.0" />
         </font>
      </Label>
      <Label layoutX="276.0" layoutY="232.0" text="Email: ">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="emailField" layoutX="277.0" layoutY="250.0" prefHeight="26.0" prefWidth="215.0" promptText="Enter your e-mail" />
      <Label layoutX="276.0" layoutY="282.0" text="Password:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <PasswordField fx:id="passwordField" layoutX="277.0" layoutY="300.0" prefHeight="26.0" prefWidth="215.0" promptText="Enter password" />
      <Label fx:id="outputLabel" alignment="CENTER" layoutX="276.0" layoutY="334.0" prefHeight="18.0" prefWidth="215.0" textFill="RED">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Button layoutX="364.0" layoutY="371.0" mnemonicParsing="false" onAction="#logIn" text="Log In">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button layoutX="655.0" layoutY="28.0" mnemonicParsing="false" onAction="#back" text="Back">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </Button>
      <TextField fx:id="showPass" layoutX="277.0" layoutY="300.0" prefHeight="26.0" prefWidth="215.0" visible="false" />
      <CheckBox fx:id="showCheck" layoutX="504.0" layoutY="305.0" mnemonicParsing="false" onAction="#passShow" />
   </children>
</AnchorPane>
