<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ecommerce.sellerpage.controller.LogInUserController">
   <children>
      <Label layoutX="256.0" layoutY="28.0" text="E-Commerce" textFill="#065ab4">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <Label layoutX="155.0" layoutY="188.0" text="Account Log In">
         <font>
            <Font name="System Bold Italic" size="18.0" />
         </font>
      </Label>
      <Label layoutX="257.0" layoutY="235.0" text="Email: ">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="emailField" layoutX="256.0" layoutY="253.0" prefHeight="26.0" prefWidth="215.0" promptText="Enter your e-mail" />
      <Label layoutX="257.0" layoutY="285.0" text="Password:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <PasswordField fx:id="passwordField" layoutX="256.0" layoutY="303.0" prefHeight="26.0" prefWidth="215.0" promptText="Enter password" />
      <Label fx:id="outputLabel" alignment="CENTER" layoutX="255.0" layoutY="337.0" prefHeight="18.0" prefWidth="215.0" textFill="RED">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Button layoutX="332.0" layoutY="371.0" mnemonicParsing="false" onAction="#logIn" text="Log In">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button layoutX="586.0" layoutY="39.0" mnemonicParsing="false" onAction="#sellerAction" prefHeight="30.0" prefWidth="100.0" text="Seller Log In">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
      </Button>
      <Hyperlink layoutX="406.0" layoutY="416.0" onAction="#register" text="register">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
      </Hyperlink>
      <Label layoutX="266.0" layoutY="419.0" text="If you have no account,">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="showPass" layoutX="256.0" layoutY="303.0" prefHeight="26.0" prefWidth="215.0" visible="false" />
      <CheckBox fx:id="showCheck" layoutX="484.0" layoutY="308.0" mnemonicParsing="false" onAction="#passShow" />
   </children>
</AnchorPane>
